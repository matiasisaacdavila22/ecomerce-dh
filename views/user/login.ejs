<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %> 
    <link rel='stylesheet' href='/css/form-user-login.css'/> 
<body>
    <%- include('../partials/header') %>
    <section>
        <img id="banner" src="/images/img-home-banner.jpg" width="100%" alt="Banner de ofertas">
    </section>
    <main class="main-login">
        <form action="/user/loguear" method="POST" class="form-login">
            <h2>Login</h2>
           
            <div class="control-form">
                <input type="text" name="userName" placeholder="Nombre de usuario" class="control" >
                <% if (locals.errors && errors.userName){ %>
                    <div class="text-danger">
                        <%= errors.userName.msg %>
                    </div>
                    <% } %>
            </div>
            <div class="control-form">
                <input type="password" name='password' placeholder="Tu ContraseÃ±a" class="control">
                <% if (locals.errors && errors.password){ %>
                    <div class="text-danger">
                        <%= errors.password.msg %>
                    </div>
                    <% } %>
            </div>
            <button type="submit" class="button-login">Enviar</button>
            <br>
            <div class="noRegistrado">No estas registrado? <a href="/user/register">Registrarme</a></div>
         </form>
        
    </main>

    <%- include('../partials/footer') %> 

</body>

</html>